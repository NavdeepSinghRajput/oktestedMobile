<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <size
                android:width="300dp"
                android:height="100dp" />

        </shape>
    </item>

    <item
        android:right="0dp"
        android:left="0dp"
        android:bottom="0dp"
        android:top="0dp">

        <rotate
            android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorHeader" />
            </shape>
        </rotate>
    </item>
    <!-- This rectangle for the left side -->
    <!-- Its color should be the same as layout's background -->
    <item
        android:right="0dp"
        android:left="188dp"
        android:top="-350dp"
        android:bottom="-210dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorAccent" />
            </shape>
        </rotate>
    </item>

    <item
        android:right="200dp"
        android:left="30dp"
        android:top="0dp"
        android:bottom="-130dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>

    <item
        android:right="250dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="70dp">
        <rotate
            android:fromDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>

    <!-- This rectangle for the right side -->
    <!-- Their color should be the same as layout's background -->
