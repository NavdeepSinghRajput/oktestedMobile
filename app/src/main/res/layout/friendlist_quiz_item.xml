<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_50sdp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp">

    <TextView
        android:id="@+id/friendName"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/colorLightGrey"
        android:textSize="8sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friendPic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/friendName"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_vector_default_profile"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp" />


    <ImageView
        android:id="@+id/userOnline"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/friendName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:src="@drawable/user_online" />

    <TextView
        android:id="@+id/addFriend"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_below="@id/friendPic"
        android:layout_centerInParent="true"
        android:layout_marginTop="-7dp"
        android:background="@drawable/rounded_pink_bgcolor"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

</RelativeLayout>
