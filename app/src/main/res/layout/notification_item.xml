<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="#212121">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationPic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_vector_default_profile"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/actionLL"
        android:layout_toRightOf="@+id/notificationPic"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8C8A8A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#717171"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rejectFriendRqt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_blackish_bgcolor"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="Cancel"
            android:textColor="#8C8A8A"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/acceptFriendRqt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_pink_bgcolor"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="Accept"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>