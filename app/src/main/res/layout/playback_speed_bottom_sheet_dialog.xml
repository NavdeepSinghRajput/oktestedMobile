<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/viewColor"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Playback speed"
        android:textColor="#333333"
        android:textSize="11sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/pointTwentyFiveRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="0.25x"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/pointFiveRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="0.5x"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/pointSeventyFiveRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="0.75x"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/normalRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="Normal"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/onePointTwentyFiveRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="1.25x"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/onePointFiveRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="1.5x"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/onePointSeventyFiveRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="1.75x"
            android:textColor="#333333"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewColor" />

        <RadioButton
            android:id="@+id/TwoRB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:layoutDirection="rtl"
            android:paddingLeft="20dp"
            android:text="2x"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RadioGroup>
</LinearLayout>